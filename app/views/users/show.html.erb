<% this_table = "users" %>
<% this_model = this_table.singularize %>

<div class="f-sidebar-buffer">
	<%= render 'sidebar' %>
</div>

<div class="profile-wrapper">
	
	<!-- BUSINESS CARD -->
	<div class="bcard-wrapper left">		
		<% editable = (@user == current_user) ? "true" : "" %>
		<div id="about" 
			contenteditable="<%= editable %>"
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-id=<%= current_user.id if current_user %>
			data-attribute='intro'><!-- end of contenteditable div -->
			<% intro = add_placeholder_if_nil('intro') %>
			<%= raw(intro) %>
	  </div><!-- menu -->
	</div>
	
	<div class="profile-card-positions diagonal-pattern">
		<%= render './cards/companies/logo', locals: { company: @user.employer }%>
		<%= render './cards/users/bcard', locals: { user: @user } %>
	</div>	

	<div class="section-wrap left">		
    
		<div class="main-content">
			
		  <div class="article biography" 
				contenteditable="<%= editable %>"
				data-table="<%= this_table %>"
				data-model="<%= this_model %>"
				data-id=<%= current_user.id if current_user %> 
				data-attribute='biography'><!-- end of contenteditable div -->
				<% biography = add_placeholder_if_nil('biography') %>
		    <%= raw(biography) %>
		  </div><!-- biography -->					
			
		  <div class="article skills">
		    <h3>
					My Skills
					<% if current_user %>
						<%= link_to 'Add Skills', '#', id: 'edit-skills' %>
						<%= link_to 'Done', '#', id: 'save-skills', class: 'hidden' %>
					<% end %>
				</h3>
				<%= render 'shared/drop_zone' %>
		    <%= render 'shared/box_of_logos' %>
		  </div><!-- skills -->					
		</div><!-- main-content -->
	</div><!-- section -->
</div><!-- wrapper -->

<div class="jobs-background"></div>
<div class="jobs-background-overlay"></div>







