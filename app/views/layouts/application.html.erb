<!DOCTYPE html>
<html lang="en">
	<head>
	  <title>wolfpack beta</title>
	  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	
		<!-- FLIPBOARD -->
		<% if request.env['PATH_INFO'] == "/jobs/flip_view" %>
			<script type="text/javascript" src="../assets/modernizr.custom.08464.js"></script>
			<script id="pageTmpl" type="text/x-jquery-tmpl">
				<div class="${theClass}" style="${theStyle}">
					<div class="front">
						<div class="outer">
							<div class="content" style="${theContentStyleFront}">
								<div class="inner">{{html theContentFront}}</div>
							</div>
						</div>
					</div>
					<div class="back">
						<div class="outer">
							<div class="content" style="${theContentStyleBack}">
								<div class="inner">{{html theContentBack}}</div>
							</div>
						</div>
					</div>
				</div>
			</script>
		<% end %>
		<!-- FLIPBOARD -->
		
	</head>

	<!-- FLIPBOARD CHANGE -->
	<body class="<%= controller_name %> <%= action_name %>">
		
		<!-- FLIPBOARD -->
		<%= render 'layouts/navbar' %>

		<%= yield %>


		<%= render 'layouts/footer' %>
	</body>

</html>



