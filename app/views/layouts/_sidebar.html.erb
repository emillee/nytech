<div class="sidebar-wrapper">
	<% if current_user %>
		<%= form_for current_user, remote: true, id: "job-filter-form"  do |f| %>

			<h1>Job Category:</h1>
			<ul class="job-filters">
				<% Job.unique_categories.each do |category| %>
					<li class="job-sidebar">
							<%= label_tag category %>
							<%= check_box_tag "user[job_settings][category][]", category %>
						<i class="fa fa-play"></i>
					</li>
				<% end %>
			</ul>
			
			<h1>Experience (Yrs):</h1>
			<ul class="job-filters">
				<% [['Internship', 'Internship'],
						['Entry (0-1)', 0], 
						['Junior (1-2)', 2], 
						['Mid (2-3)', 3], 
						['Experienced (3-5+)', 5], 
						['Veteran (5+)', 5],
						['Exec (10+)', 10]].each do |label, num_years| %>
					<li class="job-sidebar">
						<%= label_tag "#{label}-#{label}", label %>
						<%= check_box_tag "user[job_settings][experience][]", num_years %>
						<i class="fa fa-play"></i>
					</li>
				<% end %>
			</ul>
			
			
			<%= f.submit "Submit" %>
		<% end %>
		
		<% end %>
		

</div>






