<% company = locals[:company] %>
<% this_table = 'companies' %>
<% this_model = this_table.singularize %>

<div class="company-stats">
	<h3>
		<span>Funding:</span>
		<span contenteditable="true"
			data-id="<%= company.id %>" 
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-attribute="total_money_raised"
			class="companies-editable">				
			<%= (company.total_money_raised.nil? || company.total_money_raised.empty?) ? "-" : company.total_money_raised %>
		</span>
	</h3>
	<h3>
		<span>Employees:</span>
		<span contenteditable="true"
			data-id="<%= company.id %>" 
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-attribute="num_employees"
			class="companies-editable">				
			<%= company.num_employees.nil? ? "-" : company.num_employees %>
		</span>			
	</h3>
	<h3>
		<span>Category:</span>
		<span contenteditable="true"
			data-id="<%= company.id %>" 
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-attribute="category_code"
			class="companies-editable">				
			<%= (company.category_code.nil? || company.category_code.empty?) ? "-" : company.category_code %>
		</span>			
	</h3>
	<h3>
		<span>City:</span>
		<span contenteditable="true"
			data-id="<%= company.id %>" 
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-attribute="city"
			class="companies-editable">				
			<%= (company.city.nil? || company.city.empty?) ? "-" : company.city %>
		</span>			
	</h3>						
	<h3>
		<span>Neighborhood:</span>
		<span contenteditable="true"
			data-id="<%= company.id %>" 
			data-table="<%= this_table %>"
			data-model="<%= this_model %>"
			data-attribute="neighborhood"
			class="companies-editable">				
			<%= (company.neighborhood.nil? || company.neighborhood.empty?) ? "-" : company.neighborhood %>
		</span>			
	</h3>			

	<% if current_user.is_admin %>
		<% if company.career_page_link %>				
			<%= link_to 'Career Page', company.career_page_link, target: '_blank' %>
		<% else %>
			<%= form_for(company) do |f| %>
				<%= f.text_field :career_page_link %>
				<%= f.submit "Submit Career Page" %>
			<% end %>		
		<% end %>	

		<% if company.company_blog_url %>	
			<span contenteditable="true"
				data-id="<%= company.id %>" 
				data-table="<%= this_table %>"
				data-model="<%= this_model %>"
				data-attribute="company_blog_url"
				class="companies-editable">				
				<%= company.company_blog_url %>
			</span>
		<% else %>
			<%= form_for(company) do |f| %>
				<%= f.text_field :company_blog_url || '-' %>
				<%= f.submit "Submit Company Blog" %>
			<% end %>		
		<% end %>	

		<% if company.tech_blog_url %>		
			<span contenteditable="true"
				data-id="<%= company.id %>" 
				data-table="<%= this_table %>"
				data-model="<%= this_model %>"
				data-attribute="tech_blog_url"
				class="companies-editable">			
				<%= company.tech_blog_url || '-' %>
			</span>
		<% else %>
			<%= form_for(company) do |f| %>
				<%= f.text_field :tech_blog_url %>
				<%= f.submit "Submit Tech Blog" %>
			<% end %>		
		<% end %>	

	<% else %>
		<!-- <h3>Twitter: <%#= company.twitter_username || "" %></h3> -->
		<!-- <h3><%#= best_in_place company, :career_page_link %></h3> -->
		<%= link_to "Go to #{company.name}'s career page", company.career_page_link, target: '_blank' %>
	<% end %>
	
</div><!-- company-stats -->






