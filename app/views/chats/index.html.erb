<h1>Chat</h1>
<ul id="chat">
	<% @chats.each do |chat| %>
		<li><%= chat.content %></li>
	<% end %>
</ul>

<%= form_for Chat.new, remote: true do |f| %>
	<%= f.text_field :content %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :room_id, value: SecureRandom.urlsafe_base64 %>
<% end %>
