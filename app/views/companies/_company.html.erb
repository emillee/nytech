<% company = locals[:company] %>
<% this_table = "companies" %>

<div class="company-top-wrapper group">
	<%= render './cards/company_bcard', locals: { company: company } %>
	<%= render './cards/company_overview', locals: { company: company } %>
	<%= render './cards/company_stats', locals: { company: company } %>
</div>


<div class="company-mid-wrapper">
	
	<div class="company-navbar">
		<% get_unique_tags(company).each do |tag_name| %>
			<% data_section = tag_name.downcase.gsub(/[^a-z0-9\s]/, '').strip.gsub(/\s/, '-') %>
			<%= link_to "#{tag_name}", '#', data: { company: "#{company.name}", section: "#{data_section}" }%>
		<% end %>
	</div>
	
	<div id="<%= company.name %>-top-id"></div>
	
	<% company.articles.each do |article| %>
		<%= render './articles/new_article_form', locals: { article: article, object: company, this_table: this_table }%>
	<% end %>
</div>


<% if company.persisted? %>
	<%= render './shared/drop_zone', locals: { company: company } %>
	<%= render './shared/box_of_logos', locals: { company: company }  %>
<% end %>