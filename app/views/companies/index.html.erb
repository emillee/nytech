<%= render 'sidebar' %>

<div class="companies-wrapper">
	<ul class="job-posts">
		<% @companies.each do |company| %>
			<li>
				<h1><%= link_to "#{company.name}", company_url(company) %></h1>
				<h3>ID: <%= company.id %></h3>
				<h3>career page link: <%= best_in_place company, :career_page_link %></h3>
				<h3>funding: <%= company.total_money_raised || "" %></h3>
				<h3>employees: <%= company.num_employees || "" %></h3>
				<h3>twitter: <%= company.twitter_username || "" %></h3>
				<h3>category: <%= best_in_place company, :category_code || "" %></h3>
				<h3>city: <%= company.city || "" %></h3>
												
				<br>
				<br>
				
				<% company.job_listings.each do |job| %>
					<p>ID: <%= job.id %>
					<p>Link: <%= link_to "#{job.link}", "#{job.link}" %></p>
					<p>Title: <%= job.title %></p>
					<p>Dept: <%= job.dept %></p>
					<p>SubDept: <%= job.sub_dept %></p>
					<p>Exp Req: <%= job.years_exp %></p>
					<%= link_to "Get inputs", "jobs/#{job.id}/get_input" %>
					<br><br>
				<% end %>
				
				<br>
				<br>
				
				<%= form_for([company, @job]) do |f| %>
					<%= f.text_field :link %>
					<%= f.submit "Create New Job" %>
				<% end %>
			</li>		
		<% end %>
				
	</ul>
	
	
</div>

<div class="jobs-background"></div>
<div class="jobs-background-overlay"></div>