<div class="edit-business-card">
	<%= form_for @user, url: user_url(@user), html: { multipart: true } do |f| %>
		<% empty_arr = [] %>
		<% empty_arr << @user.employer.attributes unless @user.employer.nil? %>
		<%= f.text_field :company_id, placeholder: 'Enter Company Name', 'data-pre' => empty_arr.to_json %>
		<%= f.submit "Submit" %>
	<% end %>
</div>
