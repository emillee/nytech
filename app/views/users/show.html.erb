<% this_table = "users" %>
<% this_model = this_table.singularize %>
	
<%= render 'sidebar', locals: {
	user: @user
} %>

<div class="profile-wrapper left group">
	<!-- BUSINESS CARD -->
	<div class="bcard-wrapper left">	
		<%= render 'in_page_nav'%>	
		<%#= render 'users/cards/intro', locals: { user: @user } %>
	</div>

	<div class="profile-card-positions right group">
		<%= render './companies/cards/logo', locals: { company: @user.employer }%>
		<%= render 'users/cards/bcard', locals: { user: @user, this_table: this_table } %>
		<%= render 'users/cards/action_items', locals: { user: @user } %>
	</div>	

	<%= render 'user_articles', locals: { user: @user, this_table: this_table } %>

</div><!-- wrapper -->

<%= render './layouts/background' %>







