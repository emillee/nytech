<div class="send-listings-wrapper">
	<p><%= @greeting %></p>

	<p><%= @first_paragraph %></p>

	<p><%= @second_paragraph %></p>

	<p>-------------------------------</p>

	<% @jobs.each do |job| %>
		<h5><%= job.title.titleize %> @ <%= job.listing_company.name %></h5>
		<p><%= job.description %></p>

		<h5>About <%= job.listing_company.name %>: <%= job.listing_company.overview %></h5>
	<% end %>

	<p>-------------------------------</p>

	<p><%= @closing_paragraph %></p>

	<h5>Team Wolfpack</h5>
</div>